// start: intermediate progress bar
.jp-progress-line, .jp-progress-line:before
    margin 0
    width 50%
    height .3rem

.jp-progress-line 
    background-color #ff000030
    display -webkit-flex
    display flex

.jp-progress-line:before
    content ''
    background-color rgb(135,29,51)
    -webkit-animation jp-running-progress 1.75s cubic-bezier(0.4, 0, 0.2, 1) infinite
    animation jp-running-progress 1.75s cubic-bezier(0.4, 0, 0.2, 1) infinite

@-webkit-keyframes jp-running-progress
    0% { margin-left: 0px; margin-right: 100%; }
    50% { margin-left: 25%; margin-right: 0%; }
    100% { margin-left: 100%; margin-right: 0; }

@keyframes jp-running-progress
    0% { margin-left: 0px; margin-right: 100%; }
    50% { margin-left: 25%; margin-right: 0%; }
    100% { margin-left: 100%; margin-right: 0; }
// end: intermediate progress bar

// start: .jp-rotating
@-webkit-keyframes jp-rotating {
  from {
    -webkit-transform: rotate(0deg);
    -o-transform: rotate(0deg);
    transform: rotate(0deg);
  }
  to {
    -webkit-transform: rotate(360deg);
    -o-transform: rotate(360deg);
    transform: rotate(360deg);
  }
}
@keyframes jp-rotating {
  from {
    -ms-transform: rotate(0deg);
    -moz-transform: rotate(0deg);
    -webkit-transform: rotate(0deg);
    -o-transform: rotate(0deg);
    transform: rotate(0deg);
  }
  to {
    -ms-transform: rotate(360deg);
    -moz-transform: rotate(360deg);
    -webkit-transform: rotate(360deg);
    -o-transform: rotate(360deg);
    transform: rotate(360deg);
  }
}
.jp-rotating {
  -webkit-animation: jp-rotating 2s linear infinite;
  -moz-animation: jp-rotating 2s linear infinite;
  -ms-animation: jp-rotating 2s linear infinite;
  -o-animation: jp-rotating 2s linear infinite;
  animation: jp-rotating 2s linear infinite;
}
// end: .jp-rotating